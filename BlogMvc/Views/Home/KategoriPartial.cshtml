@model IEnumerable<BlogMvc.Models.Kategori>
@{
    Layout = null;
}

<h5 class="card-header">Kategoriler</h5>
<div class="card-body">
    <div class="row">
        <div class="col-lg-6">
            @foreach (var item in Model)
            {
                <ul class="list-unstyled mb-0">
               <li>
                    <a href="/Home/KategoriMakale/@item.KategoriID">@item.KategoriAdı (@item.Makaleler.Count())</a>
                </li> 
                </ul> 
            }
         
        </div>
    </div>
</div>
   
