@model BlogMvc.Models.Makale

@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="col-lg-12">
    <!-- Title -->
    <h1 class="mt-4">@Model.Baslik</h1>
    <!-- Author -->
    <p class="lead">
      
        <img class="img-circle" width="75" src="@Model.Uye.Foto" alt="@Model.Uye.AdSoyad" /><a href="/Uye/Index/@Model.UyeID">@Model.Uye.AdSoyad</a>
    </p>
    <hr>
    <!-- Date/Time -->
    <p>@String.Format("{0: MMMM yyyy}", Model.Tarih)|<span class="glyphicon glyphicon-edit"></span>@Model.Kategori.KategoriAdı (@Model.Kategori.Makaleler.Count())<span class="glyphicon glyphicon-send"></span> @Model.Yorumlar.Count() </p>
    <hr>
    <!-- Preview Image -->
    <img class="img-fluid rounded" width="700" src="@Model.Foto" alt="@Model.Baslik">
    <hr>
    <!-- Post Content -->
    <p class="lead">@Html.Raw(Model.Icerik)</p>
  
    
    @if (Session["uyeid"] != null)
    {
        <div class="well">
            <h4>Yorum</h4>
            <form role="form">
                <div class="form-group">
                    <textarea id="yorum" typeof="text" class="form-control" rows="3"></textarea>
                </div>
                <button type="submit" id="gonder" class="btn btn-primary">Yorum Yap</button>
            </form>
        </div>
    }
    else
    {
        <h2>Makaleye yorum yapmak için kullanıcı girişi yapmalısınız</h2>
        <p><a href="/Uye/Login/">Giriş Yap</a></p>
    }
    
        @foreach (var item in Model.Yorumlar.ToList())
{
<div class="media mb-4" style="
    background-color: rgba(0,0,0,.03);
    border-radius: 1em;
    padding: 14px;
">
      
      
        <img width="50" class="d-flex mr-3 rounded-circle" src="@item.Uye.Foto" alt="@item.Uye.AdSoyad">
       
        <div class="media-body">
            <h4 class="media-heading">
                @item.Uye.KullanıcıAdı
                <small>@item.Tarih</small>
            </h4>
            @item.Icerik - @if (Convert.ToInt32(Session["uyeid"]) == item.UyeID)
            {
                <a class="btn btn-danger" href="/Home/YorumSil/@item.YorumID">Sil</a>
            }
        </div>
    </div>
}

 

</div>

<script src="~/Content/js/jquery.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="~/Content/js/bootstrap.min.js"></script>
<script type="text/javascript">


        $(document).ready(function(){
            $("#gonder").click(function () {
                var yorumunuz = $("#yorum").val();
                $.ajax({
                    url: '/Home/YorumYap/',
                    data: {yorum:yorumunuz, Makaleid:@Model.MakaleID},
                    type: 'POST',
                    dataType: 'json',
                    success: function (data) {
                        alert("Başarılı "+ yorumunuz);}
                });
            });
        })



</script>

<script type="text/javascript">
    $(document).ready(function(){
        $.ajax({
            url: '/Home/OkunmaArttir/',
            data:{Makaleid: @Model.MakaleID },
            type: 'POST',
        });
    })
</script>