@model IEnumerable<BlogMvc.Models.Uye>

@{
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}



<p>
    @Html.ActionLink("Yeni Uye", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Yetki.YetkiAdı)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KullanıcıAdı)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sifre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdSoyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Yetki.YetkiAdı)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KullanıcıAdı)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sifre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdSoyad)
        </td>
        <td>
           <img src="@item.Foto" class="img-circle" width="50" />
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.UyeID }) |
            @Html.ActionLink("Detay", "Details", new { id=item.UyeID }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.UyeID })
        </td>
    </tr>
}

</table>
